---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogCard from '../../components/BlogCard.astro';
import { getCollection } from 'astro:content';

// Skip publish filter on preview branch deployments (draft branches show all posts)
// @ts-ignore â€” __CF_PAGES_BRANCH__ is injected by Vite define (see astro.config.mjs)
const isPreviewBranch = typeof __CF_PAGES_BRANCH__ !== 'undefined' && __CF_PAGES_BRANCH__ !== '' && __CF_PAGES_BRANCH__ !== 'main';

const runtime = Astro.locals.runtime;
const db = runtime?.env?.DB;

let publishedSlugs: string[] = [];
if (db && !isPreviewBranch) {
  try {
    const result = await db
      .prepare('SELECT post_slug FROM post_status WHERE published = 1')
      .all();
    publishedSlugs = (result.results || []).map((row: any) => row.post_slug);
  } catch (e) {
    console.error('Failed to fetch published slugs:', e);
    // Fallback: show all posts if DB fails
    publishedSlugs = [];
  }
}

const allPosts = await getCollection('blog');

// Filter to only published posts (if we have DB data)
const visiblePosts = publishedSlugs.length > 0
  ? allPosts.filter(post => publishedSlugs.includes(post.slug))
  : allPosts; // Fallback to all posts if no DB

const sortedPosts = visiblePosts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Get all unique tags from visible posts only
const allTags = [...new Set(visiblePosts.flatMap((post) => post.data.tags || []))];
---

<BaseLayout
  title="Blog | Ryan Haines"
  description="Articles, tutorials, and thoughts on web development"
>
  <div class="container mx-auto px-4 py-12">
    <!-- Header -->
    <header class="mb-12 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Blog</h1>
      <p class="text-xl text-text-muted max-w-2xl mx-auto">
        Thoughts, tutorials, and insights on web development, programming, and technology.
      </p>
    </header>

    <!-- Tags Filter (Optional - for future enhancement) -->
    {allTags.length > 0 && (
      <div class="mb-8 flex flex-wrap gap-2 justify-center">
        <a
          href="/blog"
          class="px-4 py-2 text-sm bg-accent text-white rounded-full hover:opacity-90 transition-opacity"
        >
          All Posts
        </a>
        {allTags.map((tag) => (
          <a
            href={`/tags/${tag}`}
            class="px-4 py-2 text-sm bg-card-bg rounded-full hover:bg-accent hover:text-white transition-colors"
          >
            #{tag}
          </a>
        ))}
      </div>
    )}

    <!-- Blog Posts Grid -->
    {sortedPosts.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {sortedPosts.map((post) => (
          <BlogCard post={post} />
        ))}
      </div>
    ) : (
      <div class="text-center py-12">
        <p class="text-text-muted text-lg">No blog posts yet. Check back soon!</p>
      </div>
    )}
  </div>
</BaseLayout>
